{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "inlineSources": true,
      "sourceRoot": "/"
    },
    "include": ["/**/*.ts"],
    "exclude": ["node_modules"]
  }
  